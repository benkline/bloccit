<% comments.each do |comment| %>
  <div class="media">
    <div class="media-body">
      <h4 class="media-heading">
        <%= comment.body %>
      </h4>
      <small>
         submitted <%= time_ago_in_words(comment.created_at) %> ago by <%=comment.user.name %> |
        <% if user_is_authorized_for_comment?(comment) && from_post%>
          <%= link_to "Delete", post_comment_path(comment, post_id: @post), method: :delete, class: 'btn btn-xs btn-danger', data: { confirm: 'Are you sure you want to delete this comment?' } %>
        <% elsif user_is_authorized_for_comment?(comment)%>
        <%= link_to "Delete", topic_comment_path(comment, topic_id: @topic), method: :delete, class: 'btn btn-xs btn-danger', data: { confirm: 'Are you sure you want to delete this comment?' } %>
        <% end %>
      </small>
      </div>
    </div>
  </div>
<% end %>
